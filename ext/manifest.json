{
  "manifest_version": 2,
  "name": "BaCaPremium",
  "version": "0.01.01.2018",

  "description": "Improves usability of BaCa testing system.",

  "icons": {
    "48": "images/ico48.png",
    "96": "images/ico96.png"
  },

  "page_action": {
    "default_icon": "images/ico96.png",
    "default_title": "BaCaPremium"
  },

  "content_scripts": [
    {
      "matches": ["*://*.ii.uj.edu.pl/*"],
      "css": ["css/general.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.ii.uj.edu.pl/*"],
      "js": ["js/jquery-3.2.1.min.js", "js/characters_fix.js", "js/general.js"],
      "run_at": "document_idle"
    }
  ]
}